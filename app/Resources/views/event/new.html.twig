{% extends 'commonSideTemplate.html.twig' %}

{% block main_container %}
    <div class="block">
        <h2>New Event</h2>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-sm-6">
                    <div id="googleMap" style="width:500px;height:380px;"></div>
                    <p class="text-center">Click on the map to select place</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/event/new.js') }}"></script>
    <script>
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
{% endblock %}